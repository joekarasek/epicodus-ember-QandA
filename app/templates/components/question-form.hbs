{{#if showQuestionForm}}
  <h1>New Question</h1>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="question">Question</label>
      {{input value=question id="question"}}
    </div>

    <div class="form-group">
      <label for="body">Additional notes</label>
      {{input value=body id="body"}}
    </div>

    <button {{action 'save'}}>Save</button>
  </form>
{{else}}
  <button {{action 'showQuestionForm'}}>New Question</button>
{{/if}}
