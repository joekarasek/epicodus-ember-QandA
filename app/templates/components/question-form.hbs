{{#if showQuestionForm}}
  {{#if currentUser.name}}
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <form class="well">
          <h1>New Question</h1>
          <div class="form-group">
            <label for="author">Author</label><br>
            <p>{{currentUser.name}}</p>
          </div>

          <div class="form-group">
            <label for="question">Question</label><br>
            {{input value=question id="question"}}
          </div>

          <div class="form-group">
            <label for="body">Additional notes</label><br>
            {{textarea value=body id="body" cols="40" rows="4"}}
          </div>

          <button {{action 'save'}} class="btn btn-primary">Save</button>
          <button {{action 'hideQuestionForm'}} class="btn btn-warning">Cancel</button>
        </form>
      </div>
    </div>
  {{else}}
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        {{user-sign-in}}
      </div>
    </div>
  {{/if}}
{{else}}
  <button {{action 'showQuestionForm'}} class="btn b">New Question</button><hr>
{{/if}}
