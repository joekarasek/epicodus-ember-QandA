{{#if showQuestionForm}}
  <h1>New Question</h1>
  <form class="well">
    <div class="form-group">
      <label for="author">Author</label><br>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="question">Question</label><br>
      {{input value=question id="question"}}
    </div>

    <div class="form-group">
      <label for="body">Additional notes</label><br>
      {{textarea value=body id="body" cols="40" rows="4"}}
    </div>

    <button {{action 'save'}} class="btn btn-primary">Save</button>
  </form><hr>
{{else}}
  <button {{action 'showQuestionForm'}} class="btn btn-primary">New Question</button><hr>
{{/if}}
